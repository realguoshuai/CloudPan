<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.zhiyou100.dao.DirectoryDao">
  <resultMap type="DirectoryDO" id="listDirectory">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="isFile" column="is_file" />
		<result property="accountId" column="account_id" />
		<result property="parentId" column="parent_id" />
		<result property="fileId" column="fileId" />
	</resultMap>
	
		<select id="listDirectory" resultMap="listDirectory">
		SELECT
		d.id
		,d.name 
		,d.is_file isFile
		,d.account_id accountId
		,d.parent_id  parentId
		,d.file_id  fileId
		,d.gmt_create  gmtCreate
		,d.gmt_modified gmtModefied
		FROM directory d
		RIGHT JOIN account a
		ON
		d.account_id=a.id
		<where>
		<if test="accountId != null">
				d.account_id = #{accountId},
		</if>
		AND parent_id=0
		</where>
	</select>

	<select id="listDirectoryBy" resultType="directoryDO">
			SELECT
		d.id
		,d.name 
		,d.is_file isFile
		,d.account_id accountId
		,d.parent_id  parentId
		,d.file_id  fileId
		,d.gmt_create  gmtCreate
		,d.gmt_modified gmtModefied
		FROM directory d
		RIGHT JOIN account a
		ON
		d.account_id=a.id
		<where>
		<if test="accountId != null">
				d.account_id = #{accountId}
		</if>
		<if test="parentId != null">
				AND d.parent_id = #{parentId}
		</if>
		</where>
	</select>

	<insert id="addDirectory">
		INSERT  INTO directory
		(`name`,`is_file`,`account_id`,`parent_id`)
		VALUES
		(#{name},${isFile},${accountId},${parentId});
	</insert>
	
	<update id="updateDirectoryName">
		UPDATE directory
		<set>
			<if test="name != null">
				name = #{name},
			</if>
		</set>
		WHERE
		id = #{id}
	</update>
	<update id="updateDirectoryLocation">
		UPDATE directory
		<set>
			<if test="parentId != null">
				parent_id = #{parentId},
			</if>
		</set>
		WHERE
		id = #{id}
	</update>
	<update id="updateDirectory">
		UPDATE directory
		<set>
			<if test="id != null">
				id = #{id},
			</if>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="isFile != null">
				is_file = #{isFile},
			</if>
			<if test="accountId != null">
				account_id = #{accountId},
			</if>
			<if test="parentId != null">
				parent_id = #{parentId},
			</if>

			<if test="fileId != null">
				file_id = #{fileId},
			</if>
		</set>
		WHERE
		id = #{id}
	</update>
	<delete id="deleteDirectory">
		delete from directory
		WHERE
		id = #{id}
	</delete>
	</mapper>