<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.zhiyou100.dao.FileDao">
	<select id="listFile" resultType="fileDO">
		SELECT
		id
		,path
		,size
		,type
		,md5
		,gmt_create
		,gmt_modified
		FROM file;
	</select>

	<select id="downFile" resultType="integer">
		SELECT
		path
		FROM file
		WHERE
		id = #{id}
	</select>
	
	<insert id="addFile">
		INSERT ignore INTO file
		(`path`,`size`,`type`)
		VALUES
		(#{path},${size},${type});
	</insert>

	<update id="updateFile">
		UPDATE file
		<set>
			<if test="id != null">
				id = #{id},
			</if>
			<if test="path != null">
				path = #{path},
			</if>
			<if test="size != null">
				size = #{size},
			</if>
			<if test="type != null">
				type = #{type},
			</if>

			<if test="md5 != null">
				md5 = #{md5},
			</if>
		</set>
		WHERE
		id = #{id}
	</update>
	<delete id="deleteFile">
		delete from file
		WHERE
		id = #{id}
	</delete>
</mapper>
	